<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/_img/ngcar.ico" type="image/x-icon">
    <title>NG CAR SERVICE</title>
    <link rel="stylesheet" href="/_css/cadastrodeservico.css">
    <script src="/_js/servicos.js"></script>
</head>

<body>
    <input type="checkbox" id="chec">
    <label for="chec">
        <img src="/_img/cardapio.png" class="menu">
    </label>
    <%- include('/home/node/app/views/cabecalho.ejs') %>
    <div class="h1">
        <h1>CADASTRO DE SERVIÇOS</h1>
    </div>
    <div>
        <img src="/_img/logongcar.png" alt="logongcar" class="logo">
    </div>
    <section id="resposta">
    <form onsubmit="inserir_();" id="formulario" ;>
        <label for="nome">Serviço:</label>
        <input type="text" id="nome" name="nome" required><br><br>

        <label for="descricao">Descrição:</label>
        <textarea id="descricao" name="descricao" required></textarea><br><br>

        <label for="quantidade">Quantidade:</label>
        <input type="number" id="quantidade" name="quantidade" required><br><br>

        <input type="submit" value="Cadastrar">
    </form>
    </section>
    <button onclick="listar_();">Listar</button>
    <table>
        <tr>
            <th>Quantidade</th>
            <th>Serviço</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
        <tbody id="servicos">
                
        </tbody>
    </table>
    <footer class="footer-text">
        Desenvolvido por <a href="/paginasobre.html">Garrido</a>
    </footer>
</body>

</html>
